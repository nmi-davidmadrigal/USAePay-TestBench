@page
@model UsaepaySupportTestbench.Pages.Scenarios.IndexModel
@{
    ViewData["Title"] = "Scenarios";
}

<h1>Scenarios</h1>

<form method="get" class="panel">
    <div class="form-row">
        <div>
            <label>Search</label>
            <input asp-for="SearchTerm" />
        </div>
        <div>
            <label>API Type</label>
            <select asp-for="FilterApiType" asp-items="Html.GetEnumSelectList<ApiType>()">
                <option value="">All</option>
            </select>
        </div>
        <div>
            <label>&nbsp;</label>
            <button type="submit">Filter</button>
        </div>
    </div>
</form>

@if (!ModelState.IsValid)
{
    <div class="warning">
        @foreach (var kvp in ViewData.ModelState)
        {
            var key = string.IsNullOrWhiteSpace(kvp.Key) ? "(general)" : kvp.Key;
            foreach (var error in kvp.Value.Errors)
            {
                <div><strong>@key</strong>: @error.ErrorMessage</div>
            }
        }
    </div>
}

@if (!string.IsNullOrWhiteSpace(Model.CredentialStatus))
{
    <div class="panel">
        <strong>@Model.CredentialStatus</strong>
    </div>
}

<div class="panel">
    <h2>REST Authentication (API Hash)</h2>
    <p>
        The app will automatically add USAePay REST <code>Authorization: Basic</code> using the API-hash scheme
        (<code>s2/seed/sha256(sourceKey + seed + pin)</code>) when credentials are present and no Authorization header is supplied.
        Credentials saved here are stored in your current session only.
    </p>

    <form method="post" asp-page-handler="SetCredentials">
        <div class="form-row">
            <div>
                <label>Environment</label>
                <select asp-for="CredentialEnvironment" asp-items="Html.GetEnumSelectList<EnvironmentType>()"></select>
            </div>
            <div>
                <label>Source Key</label>
                <input asp-for="SourceKey" autocomplete="off" />
            </div>
            <div>
                <label>PIN</label>
                <input asp-for="Pin" type="password" autocomplete="off" />
            </div>
            <div>
                <label>&nbsp;</label>
                <button type="submit" name="action" value="save">Save</button>
                <button type="submit" name="action" value="clear" class="secondary">Clear</button>
            </div>
        </div>
    </form>
</div>

<div class="panel">
    <h2>Preset Library</h2>
    @if (!Model.Presets.Any())
    {
        <p>No presets available.</p>
    }
    else
    {
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>API</th>
                <th>Environment</th>
                <th>Tags</th>
                <th>Run</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var preset in Model.Presets)
            {
                <tr>
                    <td><a asp-page="/Presets/Edit" asp-route-id="@preset.Id">@preset.Name</a></td>
                    <td>@preset.ApiType</td>
                    <td>@preset.Environment</td>
                    <td>@preset.TagsJson</td>
                    <td>
                        <form method="post" asp-page-handler="Run" asp-route-id="@preset.Id">
                            <input type="hidden" name="id" value="@preset.Id" />
                            <input type="hidden" name="TicketNumber" value="@Model.TicketNumber" />
                            <button type="submit">Run</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>

<div class="panel">
    <h2>Run Controls</h2>
    <form method="get">
        <div class="form-row">
            <div>
                <label>Ticket Number (optional)</label>
                <input asp-for="TicketNumber" />
            </div>
        </div>
        <button type="submit" class="secondary">Apply to Runs</button>
    </form>
</div>

@section RightRail {
    <div class="panel">
        <h3>Last Run</h3>
        @if (Model.LastRun is null)
        {
            <p>No run executed during this session.</p>
        }
        else
        {
            <div><strong>Preset:</strong> @(Model.LastRun.PresetId?.ToString() ?? "Manual")</div>
            <div><strong>Status:</strong> @(Model.LastRun.HttpStatus?.ToString() ?? "SOAP")</div>
            <div><strong>Latency:</strong> @Model.LastRun.LatencyMs ms</div>
        }
    </div>
}
